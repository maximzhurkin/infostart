.button
	cursor pointer
	gap(32px)
	display block
	width 100%
	height 45px
	line-height 45px
	font-size (16 / 16em)
	font-weight 700
	color color_blank
	text-align center
	text-decoration none
	background-color color_primary
	border none
	border-radius 8px
	transition background-color .25s ease-in-out, transform .25s ease-in-out
	.no-touch &:hover
		background-color darken(color_primary, 5%)
	&:active
		transform translateY(2px) scale(.99)
