.footer-copyright
	display flex
	align-items center
	justify-content center
	&__logo,
	&__socials
		gap(gap_laptop / 2)
	&__divider
		margin-left 24px
		margin-right 24px
		width 2px
		height 32px
		background-color color_whiteLilac

+mq(display_tp)
	.footer-copyright
		justify-content space-between
		&__divider
			display none

+mq(display_ml)
	.footer-copyright
		flex-direction column
		align-items flex-start
		&__socials
			margin-bottom 24px
			order 1
		&__logo
			order 2
