.feedback-form
	position relative
	&--loading:after
		content ''
		display block
		width 100%
		height 100%
		position absolute
		top 0
		left 0
		background-color rgba(color_blank, .5)
	&__row
		margin-bottom 24px
	&__columns
		display flex
	&__column
		column(6)
		&:first-child
			padding-right (gap_laptop / 2)
		&:last-child
			padding-left (gap_laptop / 2)
	&__button,
	&__terms
		margin-left auto
		margin-right auto
	&__button
		margin-bottom 16px
		padding-top 24px
		max-width 222px
	&__terms
		text-align center
		fs(12, 16)
		color color_primary

+mq(display_ml)
	.feedback-form
		&__columns
			flex-direction column
		&__column
			column(12)
			&:first-child,
			&:last-child
				gap(0)
			&:first-child
				margin-bottom 24px
